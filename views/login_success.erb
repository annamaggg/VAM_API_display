<html>
  <head>
    <style>
      body {
      margin: 0;
      padding: 0;
      }
      .icon {
        width: 120px;
        height: auto;
        max-width: none;
        padding: 60px;
      }
      .button {
        border: none;
        text-decoration: none;
        color: black;
        position: absolute;
        bottom: 60;
        font-size: 20px;
        background: none;
      }
      .navbar {
        width: 300px;
        height: 100%;
        border-right: 2px solid lightgrey;
        position: relative;
      }
      .nav-panels {
        padding-left: 60px;
      }
      .nav-text {
        display: block;
        margin-bottom: 20px;
        text-decoration: none;
        color: black;
        font-size: 20px;
        font-family: Arial, sans-serif;
      }
      .nav-text.hover {
        cursor: pointer;
      }
    </style>
  </head>
  <body >
    <div class="navbar">
      <img class="icon" src='/myVA_icon2.png'/>
      <div class="nav-panels">
        <a class="nav-text" href="/login">Home</a><br>
        <a class="nav-text" href="/my-collection">My collection</a><br>
        <a class="nav-text" href="/search">Search the archive</a><br>
        <form class="form" action="/logout" method="POST">
          <input class="button" type="submit" name="submit" value="Logout"><br>
        </form>
      </div>
    </div> 
    <div class="image-container">
          <%if @rand_item_list != nil%>
            <%@rand_item_list.each do |item|%>
              <div>
                <img class="art-img" src="https://framemark.vam.ac.uk/collections/<%=item['imageID']%>/full/!800,800/0/native.jpg">
                <div class="img-description">
                  <h2><%=item['name']%></h2>
                  <h3><%=item['type']%></h2>
                  <h3><%=item['date']%></h3>
                </div>
              </div>
            <%end%>
          <%end%>
        </div>
  </body>
</html>