<html>
  <head>
    <style>
      .container {
        flex-basis: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 150px;
      }
      .login-form {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .label {
        font-family: Arial;
        font-size: 15px;
        padding-bottom: 7px;
      }
      .input-box {
        border: 1px solid black;
        border-radius: 20px;
        padding: 4px 8px;
      }
      .submit-button {
        border: none;
        background-color: black;
        color: white;
        border-radius: 15px;
        padding: 6px 10px;
        transition: background-color 0.4s;
        margin-top: 10px;
        font-size: 15px;
      }
      .submit-button:hover {
        background-color: salmon;
        cursor: pointer;
      }
      h1 {
        padding-bottom: 15px;
      }
    </style>
  </head>
  <body >
    <div class="container">
      <h1>Login</h1>
      <form class="login-form" action="/login" method="POST">
        <label for="username" class="label">Username</label>
        <input type="text" id="username" name="username" class="input-box"><br>
        <label for="passkey" class="label">Password</label>
        <input type="text" id="passkey" name="passkey" class="input-box"><br>
        <input type="submit" name="Submit" class="submit-button">
      </form>
      <p><%=@error%></p>
    </div> 
  </body>
</html>